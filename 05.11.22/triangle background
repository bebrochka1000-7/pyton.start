x=0
y=0
x1=0
y1=0
x2=0
y2=0
def setup():
    global x,y,x1,y1,x2,y2
    size(600,400)
    frameRate(3)
    noStroke()
def draw():
    global x,y,x1,y1,x2,y2
    background(255)
    x = random(0,600)
    y = random(0,400)
    x1 = random(0,600)
    y1 = random(0,400)
    x2 = random(0,600)
    y2 = random(0,400)
    fill(random(0,255),random(0,255),random(0,255))
    triangle(x,y,x1,y1,x2,y2)
