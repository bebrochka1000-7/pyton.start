x=0
y=0
x1=0
y1=0
x2=0
y2=0
def setup():
    global x,y,x1,y1,x2,y2
    size(600,400)
    frameRate(5)
def draw():
    global x,y,x1,y1,x2,y2
    background(255)
    line(300,400,300,0)
    line(0,200,600,200)
    x = random(100,300)
    y = 300
    x1 = 300
    y1 = random(20,180)
    x2 = random(320,550)
    y2 = 300
    fill(random(0,255),random(0,255),random(0,255))
    triangle(x,y,x1,y1,x2,y2)
    
